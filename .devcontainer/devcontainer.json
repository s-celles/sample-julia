// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "Julia Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/julialang/devcontainer-features/julia:1": {
        //    "channel": "lts"  // "release", "lts", "nightly" or any other juliaup channel (juliaup list)
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "julialang.language-julia"
            ]
        }
    },
    "containerEnv": {
        "PATH": "/home/vscode/.juliaup/bin:${PATH}"
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "julia --project=. -e 'using Pkg; Pkg.instantiate()' && julia --project=. src/SampleJulia.jl"
}
