{
    "name": "Julia Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/julialang/devcontainer-features/julia:1": {
            "version": "1.9"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "julialang.language-julia"
            ]
        }
    },
    "postCreateCommand": {
        "julia-packages": "julia --startup-file=no -e 'using Pkg; Pkg.add([\"PkgTemplates\", \"JuliaFormatter\"]); Pkg.precompile()'"
    }
}